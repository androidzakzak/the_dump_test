<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvLevel"
        android:layout_marginTop="15dp"
        android:textColor="#050000"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strikes:"
        android:id="@+id/tvStrikes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="#050000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="This question is all about the number 12"
        android:id="@+id/textView13"
        android:layout_alignTop="@+id/tvLevel"
        android:layout_centerHorizontal="true"
        android:textSize="22sp" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Sesame Street?"
        android:id="@+id/buttonFalse4"
        android:layout_above="@+id/buttonTrue"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="...Backwards"
        android:id="@+id/buttonTrue"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/buttonFalse2"
        android:layout_toEndOf="@+id/buttonFalse2"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Word"
        android:id="@+id/buttonFalse2"
        android:layout_below="@+id/buttonTrue"
        android:layout_alignLeft="@+id/tvLevel"
        android:layout_alignStart="@+id/tvLevel" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Twerk Team #12"
        android:id="@+id/buttonFalse3"
        android:layout_above="@+id/tvStrikes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />
</RelativeLayout>
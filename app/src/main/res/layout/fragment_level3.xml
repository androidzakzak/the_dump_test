<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvLevel"
        android:layout_marginTop="15dp"
        android:textColor="#050000"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strikes:"
        android:id="@+id/tvStrikes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="#050000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvStrikes"
        android:layout_toRightOf="@+id/tvLevel"
        android:layout_toEndOf="@+id/tvLevel">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="8"
            android:id="@+id/buttonFalse1"
            android:background="@drawable/sqery"
            android:layout_marginRight="2dp"
            android:textSize="30dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="4"
            android:id="@+id/buttonFalse2"
            android:background="@drawable/sqery"
            android:layout_marginRight="2dp"
            android:textSize="30dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="1"
            android:id="@+id/buttonFalse3"
            android:background="@drawable/sqery"
            android:layout_marginRight="2dp"
            android:textSize="30dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="12"
            android:id="@+id/buttonFalse4"
            android:background="@drawable/sqery"
            android:textSize="30dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1+2="
        android:id="@+id/textView2"
        android:textSize="55dp"
        android:layout_below="@+id/tvLevel"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
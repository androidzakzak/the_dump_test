<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvLevel"
        android:layout_marginTop="15dp"
        android:textColor="#050000"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strikes:"
        android:id="@+id/tvStrikes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="#050000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dont press the smallest circle"
        android:id="@+id/tvText"
        android:layout_alignTop="@+id/tvLevel"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/buttonFalse4"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tvText"
        android:layout_toStartOf="@+id/tvText"
        android:background="@drawable/green_circle" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/buttonFalse3"
        android:background="@drawable/green_circle"
        android:layout_below="@+id/tvText"
        android:layout_alignLeft="@+id/tvText"
        android:layout_alignStart="@+id/tvText"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/buttonFalse2"
        android:background="@drawable/green_circle"
        android:layout_above="@+id/tvStrikes"
        android:layout_alignRight="@+id/buttonFalse3"
        android:layout_alignEnd="@+id/buttonFalse3" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/buttonTrue"
        android:background="@drawable/green_circle"
        android:layout_alignBottom="@+id/tvStrikes"
        android:layout_toRightOf="@+id/buttonFalse2"
        android:layout_toEndOf="@+id/buttonFalse2"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/buttonFalse5"
        android:background="@drawable/green_circle"
        android:layout_below="@+id/tvText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
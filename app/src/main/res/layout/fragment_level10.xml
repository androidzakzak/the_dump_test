<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strikes:"
        android:id="@+id/tvStrikes"
        android:textColor="#050000"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What question \n number is this?"
        android:id="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/buttonFalse4"
        android:layout_centerVertical="true"
        android:background="@drawable/squre_korichneviu"
        android:textSize="30sp"
        android:layout_marginLeft="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/buttonFalse5"
        android:background="@drawable/squre_korichneviu"
        android:layout_above="@+id/tvStrikes"
        android:layout_toRightOf="@+id/buttonFalse4"
        android:layout_toEndOf="@+id/buttonFalse4"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11"
        android:id="@+id/buttonFalse2"
        android:background="@drawable/squre_korichneviu"
        android:layout_alignTop="@+id/buttonFalse4"
        android:layout_toRightOf="@+id/buttonFalse5"
        android:layout_toEndOf="@+id/buttonFalse5"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14"
        android:id="@+id/buttonFalse3"
        android:background="@drawable/squre_korichneviu"
        android:layout_below="@+id/buttonFalse2"
        android:layout_toRightOf="@+id/buttonFalse2"
        android:layout_toEndOf="@+id/buttonFalse2"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:id="@+id/buttonFalse6"
        android:background="@drawable/squre_korichneviu"
        android:textSize="30sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/buttonTrue"
        android:background="@drawable/squre_korichneviu"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
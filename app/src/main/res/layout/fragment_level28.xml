<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvLevel"
        android:layout_marginTop="15dp"
        android:textColor="#050000"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strikes:"
        android:id="@+id/tvStrikes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="#050000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Press from right to left"
        android:id="@+id/tvText"
        android:layout_alignTop="@+id/tvLevel"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/buttonTrue1"
        android:layout_below="@+id/tvText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/blue_circle" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/buttonTrue2"
        android:background="@drawable/blue_circle"
        android:layout_below="@+id/buttonTrue1"
        android:layout_toLeftOf="@+id/buttonTrue1"
        android:layout_toStartOf="@+id/buttonTrue1" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/buttonTrue3"
        android:background="@drawable/blue_circle"
        android:layout_alignTop="@+id/buttonTrue1"
        android:layout_alignRight="@+id/tvText"
        android:layout_alignEnd="@+id/tvText" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/buttonTrue4"
        android:background="@drawable/blue_circle"
        android:layout_below="@+id/tvText"
        android:layout_alignLeft="@+id/tvText"
        android:layout_alignStart="@+id/tvText" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/buttonTrue5"
        android:background="@drawable/blue_circle"
        android:layout_below="@+id/buttonTrue4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>